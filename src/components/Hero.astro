---
import { Button } from '@/components/ui/button.tsx';

interface Props {
  ctaPrimaryLink?: string; // title, subtitle, ctaPrimaryText, ctaSecondaryText, ctaSecondaryLink removed
}

const {
  ctaPrimaryLink,
  // title, subtitle, ctaPrimaryText, ctaSecondaryText, ctaSecondaryLink removed
} = Astro.props;
---

<section class="min-h-screen flex items-center justify-start relative overflow-hidden pt-48 pb-24">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="grid lg:grid-cols-12 gap-16 items-center">
      <div class="lg:col-span-12 animate-fade-in">
        <div class="space-y-12">
          <div class="space-y-8">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-light leading-[0.9] tracking-tight text-neutral-900 dark:text-neutral-100">Software design & engineering company <span class='text-neutral-500 dark:text-neutral-400'>from Copenhagen</span></h1>
            <div class="max-w-2xl">
              <p class="text-lg font-light text-neutral-600 dark:text-neutral-300 leading-relaxed">
                We create digital experiences that connect people and transform businesses through innovative design and strategic thinking.
              </p>
            </div>
          </div>

          <div class="flex gap-6 pt-8">
            {ctaPrimaryLink && (
              ctaPrimaryLink.startsWith('#') ? (
                <Button
                  variant="outline"
                  size="lg"
                  className="font-light text-base px-8 py-3 border-neutral-300 dark:border-neutral-600 hover:border-neutral-500 dark:hover:border-neutral-400 text-neutral-900 dark:text-neutral-100"
                  onClick={(e: any) => { e.preventDefault(); (window as any).scrollToSection(ctaPrimaryLink.substring(1)); }}
                >
                  See our recent work
                </Button>
              ) : (
                <Button asChild variant="outline" size="lg" className="font-light text-base px-8 py-3 border-neutral-300 dark:border-neutral-600 hover:border-neutral-500 dark:hover:border-neutral-400 text-neutral-900 dark:text-neutral-100">
                  <a href={ctaPrimaryLink} target={ctaPrimaryLink.startsWith('http') ? '_blank' : undefined} rel={ctaPrimaryLink.startsWith('http') ? 'noopener noreferrer' : undefined}>
                    See our recent work
                  </a>
                </Button>
              )
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  function scrollToSection(sectionId) {
    const element = document.getElementById(sectionId);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
    }
  }
  if (typeof window !== 'undefined') {
    window.scrollToSection = scrollToSection;
  }
</script>