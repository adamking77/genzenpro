---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'tfoot'> {}

const { class: aClass, ...rest } = Astro.props;
---
<tfoot
  class={cn(
    "border-t bg-muted/50 font-medium [&>tr]:last:border-b-0",
    aClass
  )}
  {...rest}
>
  <slot />
</tfoot>