---
import type { HTMLAttributes } from 'astro/types';
import { cn } from '@/lib/utils';

interface Props extends HTMLAttributes<'span'> {}

const { class: className, ...props } = Astro.props;
---
<span
  role="link"
  aria-disabled="true"
  aria-current="page"
  class={cn("font-normal text-foreground", className)}
  {...props}
>
  <slot />
</span>